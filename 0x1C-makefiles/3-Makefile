.PHONY = all clean oclean fclean re

CC = gcc

SRC = $(wildcard *.c)
OBJ = $(SRC:%.c=%.o)
NAME = holberton
RM = rm
#CFLAGS = -Wall -Werror -Wextra -pedantic

all: ${OBJ}
	${CC} ${OBJ} -o ${NAME}
%.c: %.o
	${CC} -c ${SRC}
clean:
	${RM} -f *~ $(NAME)
oclean:
	${RM} -f $(OBJ)
fclean:
	${RM} -f *~ $(OBJ) $(NAME)
re:
	make fclean
	make all
